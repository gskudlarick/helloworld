{
  "info": {
    "name": "HelloWorld API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "pm.test('Returns ok status', () => {",
              "  const body = pm.response.json();",
              "  pm.expect(body.status).to.eql('ok');",
              "  pm.expect(body.timestamp).to.be.a('string');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Hello - Default",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/hello"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "pm.test('Returns default greeting', () => {",
              "  const body = pm.response.json();",
              "  pm.expect(body.message).to.eql('Hello, World!');",
              "  pm.expect(body.id).to.be.a('number');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Hello - Custom Name",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/hello?name=Newman"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "pm.test('Returns personalized greeting', () => {",
              "  const body = pm.response.json();",
              "  pm.expect(body.message).to.eql('Hello, Newman!');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Greetings List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/greetings"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "pm.test('Returns 5 greetings', () => {",
              "  const body = pm.response.json();",
              "  pm.expect(body).to.be.an('array').with.lengthOf(5);",
              "});",
              "pm.test('Each greeting has id and message', () => {",
              "  pm.response.json().forEach(g => {",
              "    pm.expect(g).to.have.property('id');",
              "    pm.expect(g).to.have.property('message');",
              "  });",
              "});",
              "pm.test('Contains multiple languages', () => {",
              "  const messages = pm.response.json().map(g => g.message);",
              "  pm.expect(messages).to.include('Hello, World!');",
              "  pm.expect(messages).to.include('Hola, Mundo!');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Unknown Route Returns 404",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/nonexistent"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 404', () => pm.response.to.have.status(404));"
            ]
          }
        }
      ]
    },
    {
      "name": "Response Time Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/hello"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Response time < 200ms', () => {",
              "  pm.expect(pm.response.responseTime).to.be.below(200);",
              "});",
              "pm.test('Content-Type is JSON', () => {",
              "  pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
